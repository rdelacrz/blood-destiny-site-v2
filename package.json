{
  "name": "blood-destiny-site-v2",
  "version": "1.0.0",
  "description": "Used to manage frontend dependencies for the Blood Destiny site.",
  "scripts": {
    "format": "prettier --write --ignore-unknown .",
    "build": "pnpm run build:main && pnpm run build:tailwind",
    "build:main": "copy-files-from-to --mode development",
    "build:tailwind": "pnpm dlx @tailwindcss/cli -i styles/tailwind.css -o public/css/tailwind.css",
    "build:tailwind:watch": "pnpm dlx @tailwindcss/cli -i styles/tailwind.css -o public/css/tailwind.css --watch",
    "prod": "pnpm run prod:main && pnpm run prod:tailwind",
    "prod:main": "copy-files-from-to --verbose",
    "prod:tailwind": "pnpm dlx @tailwindcss/cli -i styles/tailwind.css -o public/css/tailwind.css --minify"
  },
  "keywords": [],
  "author": "rdelacrz",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "htmx.org": "2.0.4",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "copy-files-from-to": "^3.12.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
